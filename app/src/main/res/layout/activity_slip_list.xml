<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="2"
    tools:context=".SlipListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewSlipNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.3"
                android:text="Slip Number :"
                android:textStyle="bold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/textViewSlipNumberVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20190522-8974"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.2"
                android:text="Customer Name :"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewCustomerNameVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shashank"
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewSlipDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.5"
                android:text="Slip Date :"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewSlipDateVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22-05-2019"
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewOrderNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.3"
                android:text="Order Number :"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewOrderNoVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="973627"
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.4"
                android:text="Order Date :"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewOrderDateVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22/05/2019"
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewSubmitDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.4"
                android:text="Submit Date :"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewSubmitDateVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22/05/2019"
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:weightSum="2">

            <TextView
                android:id="@+id/textViewNoOfBoxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.4"
                android:text="No Of Boxes :"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewNoOfBoxesVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

    </RelativeLayout>
</LinearLayout>